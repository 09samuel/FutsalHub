<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="35dp"
    android:layout_marginEnd="35dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="11dp">

    <RelativeLayout
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivGroundImage"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:scaleType="centerCrop" />

        <TextView
            android:fontFamily="@font/gotham_book"
            android:id="@+id/tvGroundRating"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvGroundPrice"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/round_corner"
            android:drawableLeft="@drawable/ic_star"
            android:padding="4dp"
            android:text="Rating" />

        <TextView
            android:fontFamily="@font/gotham_medium_"

            android:textColor="@color/white"
            android:id="@+id/tvGroundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivGroundImage"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:text="GroundName"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:fontFamily="@font/gotham_book"

            android:textColor="@android:color/darker_gray"
            android:id="@+id/tvGroundLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGroundName"
            android:drawableLeft="@drawable/ic_location"
            android:maxLines="1"
            android:layout_marginTop="6dp"
            android:paddingStart="20dp"
            android:paddingBottom="8dp"
            android:textSize="12sp"
            android:text="Location" />

        <TextView
            android:id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/darker_gray"
            android:text="from"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/gotham_book"

            android:textSize="12sp"
            android:paddingBottom="8dp"
            android:layout_below="@+id/tvGroundName"
            android:layout_toLeftOf="@+id/tvGroundPrice"/>

        <TextView
            android:fontFamily="@font/gotham_medium_"

            android:textColor="@color/white"
            android:id="@+id/tvGroundPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivGroundImage"
            android:layout_alignParentRight="true"
            android:paddingLeft="5dp"
            android:paddingTop="26dp"
            android:paddingEnd="20dp"
            android:paddingBottom="6dp"
            android:text="Price"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>